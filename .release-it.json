{
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md"
    }
  },
  "git": {
    "commitMessage": "chore: release ${version}"
  },
  "github": {
    "release": true
  },
  "hooks": {
    "before:init": ["yarn typecheck", "yarn test"],
    "after:bump": "yarn bootstrap"
  }
}
